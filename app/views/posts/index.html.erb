<div class="container">
<h1 class="page-header">Listing posts</h1>
<%# paginate @posts - on bottom navbar%>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Comments</th>
    <th colspan=3>Action</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td ><%= post.title.byteslice(0..30) %> <br><small><%= post.created_at %></small> </td>
      <td><%= post.text.byteslice(0..90) %></td>
      <td align="center"><span class="badge badge-info"><%= post.comments.count %></span></td>
      
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
              method: :delete, data: {confirm: 'Are you sure?'} %></td>

    </tr>
  <% end %>
  

</table>
  
  <button type="button" class="btn btn-success"><%= link_to 'New post', new_post_path %></button>
  <div class="navbar navbar-fixed-bottom" style="box-shadow: -10px -10px 5px #CCCCCC;" inverse>
    <div class="btn navbar-btn"><i class="glyphicon glyphicon-home"></i> <%= link_to "Home", "/" %></div>
    <button type="button" class="btn navbar-btn"><%= link_to 'New post', new_post_path %></button>
    <div style="float: right;" class="btn navbar-btn "><%= paginate @posts %></div>
  </div>
</div>
