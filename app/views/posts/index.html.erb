<div class="container">
<h1 class="page-header">Listing posts</h1>
<%= paginate @posts %>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Comments</th>
    <th colspan=3>Action</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td ><%= post.title.byteslice(0..30) %></td>
      <td><%= post.text.byteslice(0..80) %></td>
      <td align="center"><span class="badge badge-info"><%= post.comments.count %></span></td>
      
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
              method: :delete, data: {confirm: 'Are you sure?'} %></td>

    </tr>
  <% end %>
  

</table>
  
  <button type="button" class="btn btn-success"><%= link_to 'New post', new_post_path %></button>
  <div class="navbar navbar-fixed-bottom" inverse>
    <div class="btn btn-default"><%= link_to "Home", "/" %></div>
    <button type="button" class="btn btn-success"><%= link_to 'New post', new_post_path %></button>
    <div class="badge badge-info "><%= paginate @posts %></div>
  </div>
</div>
