<div class="container">
  <h1 class="page-header"><small>post id <%= @post.id %> -</small> <%= @post.title %></h1>
    
  <div class="well large-well">    
     <strong><%= @post.title %></strong><br><small><%= @post.created_at %></small>
     <pre><%= @post.text %></pre>
  </div>  
   
 
    <h2>Comments</h2>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
        <th>Commenter</th>
        <th>Comment</th>
        <th>Action</th>
      </tr>
      <%= render @post.comments %>
    
  </table>
 
  <h2>Add a comment:</h2>
  <%= render "comments/form" %>

  
  <button type="button" class="btn btn-default"><%= link_to 'Back', posts_path %></button>
  <button type="button" class="btn btn-success"><%= link_to 'Edit', edit_post_path(@post) %></button>
</div>
